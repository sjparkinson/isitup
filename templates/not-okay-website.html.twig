{% extends "base.html.twig" %}

{% block title %}Oh no {{ website }} is down!{% endblock %}

{% block body %}
    <div id="share">
        <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button"
            data-show-count="false"
            data-size="large"
            data-hashtags="isitup"
            data-dnt="true"
            data-text="Oh no {{ website }} is down!">Tweet</a>
        <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
    </div>

    <div id="container">
        <p><a href="http://{{ website }}" class="domain" rel="nofollow">{{ website }}</a> seems to be down!</p>

        <p class="smaller"><a href="{{ path('index') }}" title="Home">Go back</a> to check another site or <a href="{{ path('save', { website: website }) }}" title="Use {{ website }} as the default site to check">save</a> this as your default.</p>
    </div>
{% endblock %}
